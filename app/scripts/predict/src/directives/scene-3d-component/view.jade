.scene3d(style='width:100%;height:100%;',ng-show="scene!=''")
    .room-3d-canvas(style='width:100%;height:100%;',ng-mousemove="updateIconsStyle()",ng-mousedown="updateIconsFlag=true;updateIconsStyle(true)",
        ng-mouseup="updateIconsFlag=false;updateIconsStyle(true)",ng-mouseenter="showSetting=true",ng-mouseleave="hideSetting($event)")
    div(style="width:20vw;position: relative;top: -58vh;left: 12vw;",ng-show="!sceneLoadedCompleted")
        p(style="color: white;") 3D文件正在加载中（{{preloadValue || 0}}%）
        .progress
            .determinate(style='width: {{preloadValue || 0}}%;')

.noScene3d(style='width:100%;height:100%;',ng-show="scene==''")
    div(style="width: 100%;height: 100%;margin: 0; padding: 0;display:flex;text-align: center;",ng-show="scene==''")
        div(style="margin:auto;")
            img(src="{{getComponentPath('images/3d-default.png')}}")
            p(style="color:white;") 该站点未配置3D模型

